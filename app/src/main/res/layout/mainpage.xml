<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"/>


    <FrameLayout

        android:id="@+id/dashboard_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar">

        <ImageView
            android:layout_width="28sp"
            android:layout_height="28sp"
            android:background="@drawable/baseline_mail_24"
            android:layout_gravity="end"
            android:layout_marginTop="17dp"
            android:layout_marginRight="60dp"/>

        <ImageView
            android:layout_width="28sp"
            android:layout_height="28sp"
            android:background="@drawable/camera"
            android:layout_gravity="end"
            android:layout_marginTop="17dp"
            android:layout_marginRight="18dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Harvest Assistant"
            android:textStyle="bold"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/opensans"
            android:textSize="30dp"
            android:textColor="@color/black"
            />

        <androidx.cardview.widget.CardView
            android:layout_width="250dp"
            android:layout_height="175dp"
            android:layout_gravity="center"
            android:layout_marginBottom="150dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="50sp">

            <ImageView
                android:id="@+id/cardImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/best"
                android:src="@drawable/chatbot" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Click me to ask questions!"
                android:layout_gravity="center|bottom"
                android:layout_marginBottom="20dp"
                android:textColor="@color/black"
                android:fontFamily="@font/opensans"/>





        </androidx.cardview.widget.CardView>


       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Chatbot"
           android:textSize="30dp"
           android:textColor="@color/black"
           android:fontFamily="@font/opensans"
           android:textStyle="bold"
           android:layout_gravity="center_horizontal"
           android:layout_marginTop="315dp">

       </TextView>

<!--   1 and 2 cardview     -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginTop="70dp">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/card1"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:cardElevation="5dp"
                app:cardCornerRadius="50dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/card1text"
                        android:text="Recommendation"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/opensans"
                        android:layout_marginTop="3dp"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/recoimage"/>

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:id="@+id/recoimage"
                        android:src="@drawable/recommendation"
                        android:layout_marginTop="15dp"
                        android:layout_centerHorizontal="true"/>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/bsata"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:cardElevation="5dp"
                app:cardCornerRadius="50dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/card2text"
                        android:text="Harvest Volume"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/opensans"
                        android:layout_marginTop="10dp"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/corrn"/>

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:id="@+id/corrn"
                        android:src="@drawable/nggg"
                        android:layout_marginTop="15dp"
                        android:layout_centerHorizontal="true"/>
                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!--   3 and 4 cardview     -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="70dp">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/card3"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:cardElevation="5dp"
                app:cardCornerRadius="50dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/card3text"
                        android:text="Recommendations"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/opensans"
                        android:layout_marginTop="10dp"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/card3image"/>

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:id="@+id/card3image"
                        android:src="@drawable/nggg"
                        android:layout_marginTop="15dp"
                        android:layout_centerHorizontal="true"/>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/card4"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:cardElevation="5dp"
                app:cardCornerRadius="50dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/card4text"
                        android:text="Soil"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/opensans"
                        android:layout_marginTop="10dp"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/card4image"/>

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:id="@+id/card4image"
                        android:src="@drawable/corrn"
                        android:layout_marginTop="15dp"
                        android:layout_centerHorizontal="true"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#6B8C9A99"
            android:layout_gravity="bottom"
            android:layout_marginBottom="72dp"
            />

        <LinearLayout
            android:id="@+id/linearhuman"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_gravity="bottom"
            android:layout_marginTop="70dp">

            <ImageView
                android:layout_width="50dp"
                android:id="@+id/lowicon"
                android:layout_height="50dp"
                android:layout_marginLeft="65dp"
                android:src="@drawable/baseline_person_24"
                android:layout_gravity="start|center"/>
            <ImageView
                android:layout_width="50dp"
                android:id="@+id/lowicon2"
                android:layout_height="50dp"
                android:layout_marginLeft="65dp"
                android:src="@drawable/baseline_person_24"
                android:layout_gravity="start|center"/>

            <ImageView
            android:layout_width="50dp"
            android:id="@+id/lowicon3"
            android:layout_height="50dp"
            android:layout_marginLeft="65dp"
            android:src="@drawable/baseline_calendar_month_24"
            android:layout_gravity="start|center"/>


        </LinearLayout>








    </FrameLayout>

        <com.google.android.material.navigation.NavigationView
            android:id="@+id/navigationView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:fitsSystemWindows="true"
            app:headerLayout="@layout/header_menu"
            app:menu="@menu/main_menu">

        </com.google.android.material.navigation.NavigationView>


</androidx.drawerlayout.widget.DrawerLayout>




